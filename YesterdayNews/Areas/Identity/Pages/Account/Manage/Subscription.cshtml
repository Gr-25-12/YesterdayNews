@page
@model YesterdayNews.Areas.Identity.Pages.Account.Manage.SubscriptionModel
@using YesterdayNews.Models.Db

<div class="container">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-credit-card fs-1 me-3 text-primary"></i>
        <div>
            <h1 class="h2 mb-1">@ViewData["Title"]</h1>
            <p class="text-muted mb-0">Manage your subscription plan</p>
        </div>
    </div>

    @if (Model.CurrentSubscription != null)
    {
        <div class="card border-0 shadow-sm mb-4">
            @{
                var now = DateTime.UtcNow;
                var timeSpanLeft = Model.CurrentSubscription.Expires - now;
                var daysLeft = timeSpanLeft?.Days ?? 0;
                var totalHoursLeft = timeSpanLeft?.TotalHours ?? 0;

                var cardHeaderClass = "bg-primary";
                var statusBadgeClass = "bg-primary";
                var statusText = "Active";
                var textColorClass = "text-white";


                var isActive = Model.CurrentSubscription.Expires > now;
                var isDeleted = Model.CurrentSubscription.IsDeleted;

                if (!isActive)
                {
                    cardHeaderClass = "bg-light border-2";
                    statusBadgeClass = "bg-danger";
                    textColorClass = "text-dark";
                    statusText = "Expired";
                }
                else if (isDeleted)
                {
                    cardHeaderClass = "bg-light border-2";
                    statusBadgeClass = "bg-danger";
                    textColorClass = "text-dark";
                    statusText = "Deleted by Admin but it has no affect 🤝";
                }
                else if (totalHoursLeft <= 24) 
                {
                    cardHeaderClass = "bg-warning";
                    statusBadgeClass = "bg-warning text-dark";
                    textColorClass = "text-dark";
                    statusText = "Expires Today";
                }
                else if (daysLeft <= 7) 
                {
                    cardHeaderClass = "bg-warning";
                    statusBadgeClass = "bg-warning text-dark";
                    textColorClass = "text-dark";
                    statusText = "Expiring Soon";
                }
            }

            <div class="card-header @cardHeaderClass @textColorClass">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@(isActive ? "Current Plan" : "Most Recent Plan")</h5>
                    <span class="badge @statusBadgeClass">@statusText</span>
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p class="mb-2"><i class="bi bi-card-heading me-2"></i> <strong>Plan:</strong> @Model.CurrentSubscription.SubscriptionType?.TypeName</p>
                        <p class="mb-2"><i class="bi bi-calendar-plus me-2"></i> <strong>Started:</strong> @Model.CurrentSubscription.Created.ToShortDateString()</p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-2"><i class="bi bi-calendar-x me-2"></i> <strong>Expires:</strong> @Model.CurrentSubscription.Expires?.ToShortDateString()</p>
                        <p class="mb-0">
                            <i class="bi bi-clock me-2"></i> <strong>@(isActive ? "Remaining:" : "Expired:")</strong>
                            @if (isActive)
                            {
                                @if (totalHoursLeft < 1)
                                {
                                    <span class="text-danger">Less than 1 hour</span>
                                }
                                else if (totalHoursLeft <= 24)
                                {
                                    <span class="text-warning">@((int)totalHoursLeft) hour@((int)totalHoursLeft != 1 ? "s" : "")</span>
                                }
                                else if (daysLeft > 0)
                                {
                                    <span>@daysLeft day@(daysLeft != 1 ? "s" : "")</span>
                                }
                                else
                                {
                                    <span>Less than 1 day</span>
                                }
                            }
                            else
                            {
                                
                                    var daysAgo = Math.Abs((int)(now - Model.CurrentSubscription.Expires.Value).TotalDays);
                                    if (daysAgo == 0)
                                    {
                                        var hoursAgo = Math.Abs((int)(now - Model.CurrentSubscription.Expires.Value).TotalHours);
                                        <span>@hoursAgo hour@(hoursAgo != 1 ? "s" : "") ago</span>
                                    }
                                    else
                                    {
                                        <span>@daysAgo day@(daysAgo != 1 ? "s" : "") ago</span>
                                    }
                                
                            }
                        </p>
                    </div>
                </div>
            </div>

            <div class="card-footer border-1">
                <div class="d-flex gap-2">
                    @if (isActive)
                    {
                        <button class="btn btn-primary" type="button" onclick="showFeatureUnavailable('Change Plan')">
                            <i class="bi bi-arrow-repeat me-2"></i>Change Plan
                        </button>
                        <button class="btn btn-outline-danger" type="button" onclick="showFeatureUnavailable('Cancel Subscription')">
                            <i class="bi bi-trash me-2"></i>Cancel Subscription
                        </button>
                    }
                    else
                    {
                        <a role="button" class="btn btn-success px-4" data-bs-toggle="modal" data-bs-target="#subscribeModal">
                            <i class="bi bi-plus-circle me-2"></i>Renew Subscription
                        </a>
                    }
                </div>
            </div>
        </div>

        @if (Model.SubscriptionHistory.Any())
        {
            <!-- Subscription History -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Previous Subscriptions</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table mb-0 text-left">
                            <thead class="table-light">
                                <tr>
                                    <th><i class="bi bi-card-heading me-2"></i>Plan</th>
                                    <th><i class="bi bi-calendar-plus me-2"></i>Start Date</th>
                                    <th><i class="bi bi-calendar-x me-2"></i>End Date</th>
                                    <th><i class="bi bi-info-circle me-2"></i>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var history in Model.SubscriptionHistory)
                                {
                                    <tr>
                                        <td>@history.SubscriptionType?.TypeName</td>
                                        <td>@history.Created.ToShortDateString()</td>
                                        <td>@history.Expires?.ToShortDateString()</td>
                                        <td>
                                            @{
                                                
                                                var historyIsActive = history.Expires > DateTime.UtcNow;
                                                var historyStatus = historyIsActive ? "Active" : "Expired";
                                                var historyBadgeClass = historyIsActive ? "bg-success" : "bg-secondary";
                                            }
                                            <span class="badge @historyBadgeClass fs-6">@historyStatus</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
       
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-credit-card-2-front fs-1 text-muted mb-3"></i>
                <h3 class="h4 mb-3">No Subscription Found</h3>
                <p class="text-muted mb-4">You haven't subscribed to any plan yet</p>
                <a role="button" class="btn btn-primary px-4" data-bs-toggle="modal" data-bs-target="#subscribeModal">
                    <i class="bi bi-plus-circle me-2"></i>Subscribe Now
                </a>
            </div>
        </div>
    }
</div>
<script src="~/js/subscription.js"></script>

<script>
    function showFeatureUnavailable(featureName) {
        Swal.fire({
            title: 'Feature Coming Soon!',
            text: `${featureName} feature is not available yet.We might work on it! 😉`,
            icon: 'info',
            confirmButtonText: 'OK',
            confirmButtonColor: '#3085d6'
        });
    }
</script>