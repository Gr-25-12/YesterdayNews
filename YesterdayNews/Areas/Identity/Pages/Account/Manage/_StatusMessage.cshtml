@model string

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Error") ? "danger" : "success";
    var icon = Model.StartsWith("Error") ? "exclamation-circle" : "check-circle";

    <div class="alert alert-@statusMessageClass alert-dismissible fade show py-2 text-center" role="alert" style="max-width: 600px; margin: 0 auto;">
        <div class="d-flex align-items-center justify-content-center">
            <i class="bi bi-@icon me-2"></i>
            <span>@Model</span>
        </div>
    </div>
}
