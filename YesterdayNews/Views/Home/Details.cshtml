@model YesterdayNews.Models.Db.Article;

@{
    ViewData["Title"] = Model.Headline;
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-7 col-lg-8">
            @await Html.PartialAsync("_ArticlePartialView", Model)
            @await Component.InvokeAsync("EarlierNews", new { articlesToSkip = 3 })
        </div>
        <div class="col-12 col-md-5 col-lg-4">
            @await Component.InvokeAsync("Sidebar")
        </div>
    </div>
</div>


<div class="modal fade" id="subscribeModal" tabindex="-1" aria-labelledby="subscribeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="subscribeModalLabel">Choose Your Subscription Plan</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="subscriptionPlans">
                    <div class="text-center py-5 text-muted">
                        Loading plans...
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
