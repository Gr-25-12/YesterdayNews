
@model List<YesterdayNews.Models.ViewModels.ArticleVM>

<article class="mb-4 border p-3 rounded shadow-sm">
    <h2>Earlier this week</h2>
    <hr />
    <ul class="list-unstyled">
        @foreach (var article in Model)
        {
            <li class="mb-3">
                <div class="d-flex">
                    <img src="@article.ImageURL" alt="Thumbnail" class="me-3 rounded" style="width: 60px; height: 60px; object-fit: cover;" />
                    <div class="flex-grow-1 d-flex justify-content-between align-items-center">
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@article.Id" class="text-decoration-none me-3">
                            <p class="article-underline mb-1 fw-bold">@article.Linktext</p>
                        </a>
                        <small class="text-muted time-ago mb-0" data-timestamp="@article.DateStamp.ToString("o")">
                            @article.Category?.Name &bull; <span class="hours-ago"></span>
                        </small>
                    </div>
                </div>
            </li>
        }
    </ul>
</article>
