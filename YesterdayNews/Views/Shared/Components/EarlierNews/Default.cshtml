@model List<YesterdayNews.Models.ViewModels.ArticleVM>
@* EarlierNews View Component *@
<article class="mb-4 border p-3 pb-0 rounded shadow-sm">
	<h2 class="text-secondary">Earlier this week</h2>
	<ul class="list-unstyled">
		@foreach (var article in Model)
		{
			<hr class="my-2" />
			<a asp-controller="Home" asp-action="Details" asp-route-id="@article.Id" class="text-decoration-none d-block">

			<li class="mb-0">
				<div class="d-flex">
					<img src="@article.ImageURL" alt="Thumbnail" class="me-3 rounded" style="width: 60px; height: 60px; object-fit: cover;" />
					<div class="flex-grow-1">
						<div class="d-flex justify-content-between align-items-center">
							<p class="article-underline mb-1 fw-bold">@article.Linktext</p>
						</div>
						<p class="text-muted small mb-0">@article.Summary ...</p>
					</div>
				</div>
				<div class="text-end">
					<small class="text-muted time-ago mb-0" data-timestamp="@article.DateStamp.ToString("o")">
						@article.Category?.Name &bull; <span class="hours-ago"></span>
					</small>
				</div>
			</li>
			</a>
		}
	</ul>
</article>
