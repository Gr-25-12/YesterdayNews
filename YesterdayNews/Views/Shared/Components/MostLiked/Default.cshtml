@model List<YesterdayNews.Models.ViewModels.ArticleVM>
@* MostLiked View Component *@
<article class="mb-4 border p-3 pb-0 rounded shadow-sm">
	<h5 class="text-secondary">Most Liked</h5>
	<ul class="list-unstyled">
		@for (int i = 0; i < Model.Count; i++)
		{
			var article = Model[i];
			<hr class="my-2" />
			<a asp-controller="Home" asp-action="Details" asp-route-id="@article.Id" class="text-decoration-none d-block">
			<li class="mb-0">
				<div class="d-flex">
					<div class="flex-shrink-0 d-flex align-items-start">
						<div class="rounded-circle bg-secondary text-white d-flex justify-content-center align-items-center me-3 mt-1" style="width: 30px; height: 30px; font-size: 0.9rem;">
							@(i + 1)
						</div>
					</div>
					<div class="flex-grow-1">
						<p class="article-underline mb-0 fw-bold text-break">@article.Linktext</p>
					</div>
				</div>
			</li>
			</a>
		}
	</ul>
</article>