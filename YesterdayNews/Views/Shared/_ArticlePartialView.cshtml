@model YesterdayNews.Models.Db.Article

<div class="card article-management-card mb-4">
    <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Article Management</h5>
            <span class="badge bg-primary">@Model.ArticleStatus</span>
        </div>
    </div>

    <div class="card-body">
        <div class="article-meta mb-4">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Author:</strong> @User.FindFirst("FullName")?.Value</p>
                    <p><strong>Created:</strong> @Model.DateStamp.ToString("MMMM dd, yyyy")</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Category:</strong> @Model.Category?.Name</p>
                    <p><strong>Last Updated:</strong> @DateTime.Now.ToString("MMMM dd, yyyy")</p>
                </div>
            </div>
        </div>

        <div class="article-actions d-flex flex-wrap gap-2">
           
                <form asp-action="SubmitForReview" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-send-check"></i> Submit for Review
                    </button>
                </form>
            

            
                <form asp-action="Publish" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Publish
                    </button>
                </form>
            

           
                <form asp-action="Archive" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn-secondary">
                        <i class="bi bi-archive"></i> Archive
                    </button>
                </form>
            

            <form asp-action="SaveDraft" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save as Draft
                </button>
            </form>
        </div>
    </div>
</div>

<style>
    .article-management-card {
        border-radius: 0.5rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .article-actions .btn {
        min-width: 180px;
    }

    @@media (max-width: 768px) {
        .article-actions .btn {
            width: 100%;
        }
    }
</style>