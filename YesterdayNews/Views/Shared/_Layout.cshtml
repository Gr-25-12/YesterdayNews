@using YesterdayNews.Models.Db
@using YesterdayNews.Services.IServices


@inject ICategoryService _categoryService

@{
	var categories = _categoryService.GetAll().OrderBy(c => c.Name).ToList();
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - YesterdayNews</title>
	<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/YesterdayNews.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
	<link rel="stylesheet" href="//cdn.datatables.net/2.3.2/css/dataTables.dataTables.min.css">
	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
	<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet">
	<link rel="stylesheet" type='text/css' href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />


</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-light border-bottom box-shadow w-100" style="height:70px;">
			<!-- Searchbar (Desktop) -->
			<div class="d-none d-lg-flex justify-content-start m-2" style="min-width: 300px;">
				<form asp-controller="Home" asp-action="Search" method="get" class="d-flex justify-content-end">
					<input type="text" name="query" class="form-control me-2" placeholder="Search news..." />
					<button type="submit" class="btn btn-secondary">
						<i class="bi bi-search"></i>
					</button>
				</form>
			</div>
			<div class="container-fluid d-flex justify-content-center position-relative">
				<a class="navbar-brand px-0 fw-bold text-primary m-2 justify-content-center" asp-controller="Home" asp-action="Index">Yesterday's News</a>

				<div class="d-flex position-fixed start-0 px-2 m-2">
					<button class="navbar-toggler btn btn-outline-secondary m-1" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
							aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<!-- Searchbar button (visible on mobile) -->
					<button class="btn d-lg-none btn-secondary m-1" type="button" data-bs-toggle="collapse" data-bs-target="#mobileSearch">
						<i class="bi bi-search"></i>
					</button>
				</div>
			</div>
			<!-- Top Navbar (including hamburger view for mobile)-->
			<div class="navbar-collapse collapse d-lg-flex justify-content-start navbar-dark bg-primary m-2">
				<ul class="navbar-nav">
					<li class="nav-item d-lg-none">
						<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
					</li>
					@foreach (var category in categories)
					{
						<li class="nav-item d-lg-none">
							<a class="nav-link @(ViewData["SelectedCategory"]?.ToString() == category.Id.ToString() ? "active" : "")"
							   asp-controller="Home" asp-action="Index" asp-route-categoryId="@category.Id">
								@category.Name
							</a>
						</li>
					}
					@if (User.IsInRole(StaticConsts.Role_Admin) || User.IsInRole(StaticConsts.Role_Editor) || User.IsInRole(StaticConsts.Role_Journalist))
					{

						<li class="nav-item dropdown bg-white w-100 m-0">
							<a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Content management
							</a>
							<ul class="dropdown-menu">
								<li class="dropdown-item">
									<a class="nav-link text-dark" asp-area="" asp-controller="Article" asp-action="Index">Articles</a>
								</li>

								<li class="dropdown-item">
									<a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Categories</a>
								</li>
								<li class="dropdown-item">
									<a class="nav-link text-dark" asp-area="" asp-controller="SubscriptionType" asp-action="Index">Subscription Types</a>
								</li>
								<li class="dropdown-item">
									<a class="nav-link text-dark" asp-area="" asp-controller="Subscription" asp-action="Index">Subscriptions</a>
								</li>
								<li><hr class="dropdown-divider"></li>
								<li><a class="dropdown-item" asp-controller="User" asp-action="Index">User Management </a></li>
							</ul>
						</li>
					}
				</ul>
				<div class="end-0 navbar-primary bg-white justify-content-end">
					<partial name="_LoginPartial" />
				</div>
			</div>

		</nav>
		<!-- bar for navigation categories -->
		<nav class="navbar navbar-expand-lg border-bottom d-none d-lg-block py-0 navbar-dark bg-primary">
			<div class="container-fluid position: relative">
				<ul class="navbar-nav d-flex justify-content-center align-items-center w-100 fw-bold fs-5">
					<li class="nav-item">
						<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
					</li>
					@foreach (var category in categories)
					{
						<li class="nav-item">
							<a class="nav-link @(ViewData["SelectedCategory"]?.ToString() == category.Id.ToString() ? "active" : "")"
							   asp-controller="Home" asp-action="Index" asp-route-categoryId="@category.Id">
								@category.Name
							</a>
						</li>
					}
					<!-- Add more categories here -->
				</ul>
				
			</div>
		</nav>
		<!-- SearchBar (Mobile only) -->
		<div class="collapse mt-2 d-lg-none mx-3 p-2 bg-primary rounded" id="mobileSearch">
			<form asp-controller="Home" asp-action="Search" method="get" class="d-flex">
				<input type="text" name="query" class="form-control me-2" placeholder="Search news..." />
				<button type="submit" class="btn btn-secondary">
					<i class="bi bi-search"></i>
				</button>
			</form>
		</div>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			<partial name="_Notification" />
			@RenderBody()
		</main>
	</div>

	<div id="global-loader" class="global-loader">
		<div class="loader-content">
			<div class="spinner-border text-primary" role="status">
				<span class="visually-hidden">Loading...</span>
			</div>
			<div class="loader-text">Loading...</div>
		</div>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2025 - YesterdayNews - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
	<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="//cdn.datatables.net/2.3.2/js/dataTables.min.js" asp-append-version="true"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
