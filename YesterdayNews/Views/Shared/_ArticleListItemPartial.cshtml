@using YesterdayNews.Models.ViewModels
@model ArticleVM

<a asp-controller="Home" asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none d-block">
	<li class="m-1 mb-0 d-flex align-items-start">
		<img src="@Model.ImageURL" alt="Thumbnail" class="me-3 rounded align-self-center" style="width: 120px; height: 120px; object-fit: cover;" />
		<div class="flex-grow-1">
			<div>
				<div class="d-flex justify-content-between align-items-center">
					<p class="article-underline mb-1 fw-bold">@Model.Linktext</p>
				</div>
				<p class="text-muted small mb-0">@Model.Summary ...</p>
			</div>
			<div class="text-end">
				<small class="text-muted time-ago mb-0" data-timestamp="@Model.DateStamp.ToLocalTime().ToString("o")">
					@Model.Category?.Name &bull; <span class="hours-ago"></span>
				</small>
			</div>
		</div>
		
	</li>
</a>