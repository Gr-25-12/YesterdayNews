@model YesterdayNews.Models.Db.Category

@{
    ViewData["Title"] = "Create";
}

<div class="mt-3 d-flex justify-content-end align-content-end">
    <a asp-action="Index" class="btn btn-outline-secondary border-1 border-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>
<div class="container col-8">

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h6 class="text-white py-2">Add New Category</h6>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                <label asp-for="Name" class="control-label mb-3 ms-2"></label>
                <input asp-for="Name" class="form-control" placeholder="Category"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
                        <div class="form-group m-4 mb-3 ms-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
