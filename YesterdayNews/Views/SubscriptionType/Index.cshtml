@model IEnumerable<YesterdayNews.Models.Db.SubscriptionType>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12 text-start">
            <h2 class="text-primary">SubscriptionType List</h2>
        </div>
        <div class="col-12 text-end mb-2">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New SubscriptionType
            </a>
        </div>
    </div>

    <hr />
    <div class="table-responsive">
        <table id="myDataTable" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Type Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Subscriptions count</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/subscriptionType.js"></script>
}