@model YesterdayNews.Models.Db.Subscription

@{
    ViewData["Title"] = "Create";
}


<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <div class="text-center">
            <h3>Create Subscription</h3>
            <hr />
        </div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SubscriptionTypeId" class="control-label"></label>
                <select asp-for="SubscriptionTypeId" class="form-control" asp-items="ViewBag.SubscriptionTypeId">
                    <option value="">-- Choose SubscriptionType --</option>
                </select>
                <span asp-validation-for="SubscriptionTypeId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PaymentComplete" /> @Html.DisplayNameFor(model => model.PaymentComplete)
                </label>
            </div>
            <div class="form-group text-end">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div class="text-start">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
